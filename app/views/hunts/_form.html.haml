= simple_form_for @hunt, html: { class: "form-vertical" } do |f|
  = f.simple_fields_for :victim do |v|
    = v.input :name
    = v.input :guild

  = f.input       :reason
  .well
    = f.button      :submit, class: 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), hunts_path, :class => 'btn btn-default'
