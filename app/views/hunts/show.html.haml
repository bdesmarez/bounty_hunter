- model_class = Hunt
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:victim_name) + ':'
  %br
  = @hunt.victim.name
%p
  %strong= model_class.human_attribute_name(:reason) + ':'
  %br
  = @hunt.reason


= link_to t('.back', :default => t("helpers.links.back")), hunts_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_hunt_path(@hunt), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), hunt_path(@hunt), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
